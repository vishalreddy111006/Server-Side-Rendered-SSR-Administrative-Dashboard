// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      Role     @default(USER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation: User has many Orders
  orders    Order[]
}

model Product {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       Float
  stock       Int
  images      String[]
  
  categoryId  String      @db.ObjectId
  category    Category    @relation(fields: [categoryId], references: [id])

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  // Relation: Product can be in many OrderItems
  orderItems  OrderItem[]
}

model Category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  products Product[]
}

// --- NEW MODELS FOR ORDER MANAGEMENT ---

model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Status: PENDING, SHIPPED, DELIVERED, CANCELLED
  status      String      @default("PENDING") 
  
  total       Float
  
  // Link to User (The Customer)
  userId      String      @db.ObjectId
  user        User        @relation(fields: [userId], references: [id])
  
  // Link to Items inside this order
  items       OrderItem[]
}

model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  
  // Link to Order
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  // Link to Product
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  
  // Snapshot Data (Saved in case Product is changed/deleted later)
  name      String  
  quantity  Int
  price     Float   
}
